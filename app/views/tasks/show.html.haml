#jobs
  .job
    %h1= @task.title
    %p= @task.description
    %p= @task.company
    %bunton.btn.btn-default= link_to "Complete Task", @task.url
#links
  = link_to "Home", root_path, class: 'btn btn-sm btn-default'
  = link_to "Edit", edit_task_path(@task), class: 'btn btn-sm btn-primary'
  = link_to "Delete", task_path(@task), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: "Are you sure?" }
